import pywhatkit as kit
import time

def repeat_message(number, message, repeat_count, wait_time=1):
    for i in range(repeat_count):
        print(f"Sending message {i+1} to {number}... ğŸ’–")
        kit.sendwhatmsg_instantly(number, message, wait_time)
        time.sleep(wait_time)  # Small delay to avoid detection
    print("âœ… All messages sent successfully!")

# Example Usage
repeat_message("+91xxxxxxxxxx", "Hey babe! ğŸ˜˜ This is message repeat test!", 5, 4)
